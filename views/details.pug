extends layout

block content
  .row.details.my-3
    .col-12
      .details-header
        .media-list
          +media(`${epoch.name}`, `${epoch.user.name}`, `${epoch.image}`) 
        .line
        p=epoch.body
        .line
      
      .d-flex.justify-content-around
        button.btn.btn-light.btn-block.mr-4 
          i.fas.fa-play
          | Play
        button.btn.btn-light.btn-block.mt-0 
          i.fas.fa-random
          | Shuffle

      .details-body
        .line
        .media-list.media-list--sm
          each track in epoch.tracks
            +media(track.name, ``, 'https://i.scdn.co/image/ab67616d0000b27334bf16d92ae11f8d3eadf295') 
